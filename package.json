{
  "name": "@levibostian/monorepo",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "install": "npx lerna bootstrap --hoist",
    "clean": "rm -rf .build-cache && npx lerna run clean",
    "build": "npm run clean && lerna run build",
    "test": "npx jest",
    "test:watch": "npx lerna run --parallel test:watch",
    "lint": "npx eslint --fix --ext ts,js .",
    "pretty:check": "prettier --list-different \"**/*.{css,html,js,json,md,scss,ts}\"",
    "format": "npx prettier --write \"{packages}/**/*.ts\"",
    "link": "npx lerna link"
  },
  "devDependencies": {
    "@levibostian/eslint-config-node": "^1.3.0",
    "@types/jest": "^26.0.16",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "codecov": "^3.8.1",
    "eslint": "^7.14.0",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^1.3.1",
    "jest": "^26.0.0",
    "jest-junit": "^12.0.0",
    "lerna": "^3.13.2",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "ts-jest": "^26.4.4",
    "typescript": "^3.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,html,js,json,md,scss,ts}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "npx eslint --fix --ext ts,js",
      "git add"
    ]
  }
}
